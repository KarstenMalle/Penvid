        },
        "user_id": {
          "type": "string",
          "format": "uuid"
        },
        "amount": {
          "type": "number",
          "format": "float"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "transaction_date": {
          "type": "string",
          "format": "date-time"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
