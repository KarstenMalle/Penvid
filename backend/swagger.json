          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "symbol": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "purchase_date": {
          "type": "string",
          "format": "date"
        },
        "amount": {
          "type": "number",
          "format": "float"
        },
        "purchase_price": {
          "type": "number",
          "format": "float"
        },
        "current_price": {
