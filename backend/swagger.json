{
  "swagger": "2.0",
  "info": {
    "title": "Penvid Finance API",
    "description": "API for Penvid Finance Application",
    "version": "1.0.0"
  },
  "basePath": "/api",
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "securityDefinitions": {
    "bearerAuth": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "JWT Authorization header using the Bearer scheme. Example: \"Authorization: Bearer {token}\""
    }
  },
  "tags": [
    {
      "name": "Profile",
      "description": "User profile operations"
    },
    {
      "name": "Currency",
      "description": "Currency conversion operations"
    },
    {
      "name": "Financial",
      "description": "Financial data operations"
    }
  ],
  "paths": {
    "/profile": {
      "get": {
        "tags": ["Profile"],
        "summary": "Get user profile",
        "description": "Returns the current user's profile",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "User profile",
            "schema": {
              "$ref": "#/definitions/Profile"
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Profile not found"
          }
        }
      },
      "patch": {
        "tags": ["Profile"],
        "summary": "Update user profile",
        "description": "Updates the current user's profile",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Profile fields to update",
            "required": true,
            "schema": {
              "$ref": "#/definitions/ProfileUpdate"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Updated user profile",
            "schema": {
              "$ref": "#/definitions/Profile"
            }
          },
          "400": {
            "description": "Invalid input"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/currencies": {
      "get": {
        "tags": ["Currency"],
        "summary": "Get supported currencies",
        "description": "Returns list of supported currencies",
        "responses": {
          "200": {
            "description": "List of currency codes",
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "/currencies/refresh": {
      "post": {
        "tags": ["Currency"],
        "summary": "Refresh currency rates",
        "description": "Force refresh of currency exchange rates (admin only)",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Currency rates refreshed"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/currencies/convert": {
      "post": {
        "tags": ["Currency"],
        "summary": "Convert currency amount",
        "description": "Convert an amount from one currency to another",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Conversion details",
            "required": true,
            "schema": {
              "$ref": "#/definitions/CurrencyConversion"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Converted amount",
            "schema": {
              "$ref": "#/definitions/ConversionResult"
            }
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/financial/accounts": {
      "get": {
        "tags": ["Financial"],
        "summary": "Get user accounts",
        "description": "Returns the current user's financial accounts",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "List of accounts",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Account"
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/financial/transactions": {
      "get": {
        "tags": ["Financial"],
        "summary": "Get user transactions",
        "description": "Returns the current user's financial transactions",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "List of transactions",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Transaction"
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/financial/loans": {
      "get": {
        "tags": ["Financial"],
        "summary": "Get user loans",
        "description": "Returns the current user's loans",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "List of loans",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Loan"
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/financial/investments": {
      "get": {
        "tags": ["Financial"],
        "summary": "Get user investments",
        "description": "Returns the current user's investments",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "List of investments",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Investment"
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/financial/goals": {
      "get": {
        "tags": ["Financial"],
        "summary": "Get user goals",
        "description": "Returns the current user's financial goals",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "List of goals",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Goal"
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  },
  "definitions": {
    "Profile": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "avatar_url": {
          "type": "string"
        },
        "language_preference": {
          "type": "string"
        },
        "currency_preference": {
          "type": "string",
          "enum": ["USD", "DKK"]
        },
        "country_preference": {
          "type": "string"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "ProfileUpdate": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "language_preference": {
          "type": "string"
        },
        "currency_preference": {
          "type": "string",
          "enum": ["USD", "DKK"]
        },
        "country_preference": {
          "type": "string"
        }
      }
    },
    "CurrencyConversion": {
