          "type": "string",
          "enum": ["USD", "DKK"]
        }
      }
    },
    "ConversionResult": {
      "type": "object",
      "properties": {
        "originalAmount": {
          "type": "number",
          "format": "float"
        },
        "originalCurrency": {
          "type": "string"
        },
        "convertedAmount": {
          "type": "number",
          "format": "float"
        },
        "convertedCurrency": {
          "type": "string"
        }
      }
    },
    "Account": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "user_id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "balance": {
          "type": "number",
          "format": "float"
        },
        "is_primary": {
          "type": "boolean"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "currency": {
          "type": "string"
        }
